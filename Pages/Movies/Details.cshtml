@page
@model HW6.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Rating)
        </dd>
        <!-- Because we used .Include(), loop through the Reviews and display the score -->
        @foreach(var r in Model.Movie.Reviews)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.Score)
            </dt>
            <dd class="col-sm-1">
                @Html.DisplayFor(model => r.Score)
            </dd>
            <dt class="col-sm-9">
                <form method="post">
                    <input type="hidden" asp-for="ReviewIdToDelete" value="@r.ID" />
                    <input type="submit" asp-page-handler="DeleteReview" asp-route-id="@Model.Movie.MovieID" value="Delete Review" class="btn btn-danger btn-sm" />
                </form>
            </dt>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie.MovieID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
